{
    "name": "@sevenlabs-hq/carbon-cli",
    "version": "0.2.0",
    "description": "Generate decoders and scaffold indexers for Solana programs from Anchor or Codama IDL",
    "keywords": [
        "solana",
        "carbon",
        "decoder",
        "indexer",
        "cli",
        "anchor",
        "codama",
        "idl"
    ],
    "license": "MIT",
    "author": "SevenLabs",
    "repository": {
        "type": "git",
        "url": "https://github.com/sevenlabs-hq/carbon"
    },
    "homepage": "https://github.com/sevenlabs-hq/carbon#readme",
    "private": false,
    "type": "module",
    "bin": {
        "carbon": "./dist/cli.js",
        "carbon-cli": "./dist/cli.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist/**",
        "templates/**"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "type-check": "tsc --noEmit",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "codama": "1.3.0",
        "@codama/nodes": "1.3.0",
        "@codama/nodes-from-anchor": "1.2.1",
        "@sevenlabs-hq/carbon-codama-renderer": "0.2.0",
        "@coral-xyz/anchor": "^0.30.1",
        "@inquirer/prompts": "^7.9.0",
        "chalk": "^5.6.2",
        "commander": "^12.1.0",
        "gradient-string": "^3.0.0",
        "nunjucks": "^3.2.4",
        "ora": "^9.0.0"
    },
    "devDependencies": {
        "@types/nunjucks": "^3.2.4",
        "rimraf": "^6.0.1",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
