{
    "name": "@sevenlabs-hq/carbon-cli",
    "version": "0.1.0",
    "description": "Carbon codegen CLI (TypeScript) to generate decoders from Anchor or Codama IDL",
    "license": "MIT",
    "private": false,
    "type": "module",
    "bin": {
        "carbon-cli": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "type-check": "tsc --noEmit",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "@coral-xyz/anchor": "^0.30.1",
        "@codama/nodes": "^1.3.0",
        "@codama/nodes-from-anchor": "^1.2.1",
        "@sevenlabs-hq/carbon-codama-renderer": "workspace:*",
        "codama": "^1.3.0"
    },
    "devDependencies": {
        "rimraf": "^6.0.1",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
