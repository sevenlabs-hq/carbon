pub struct CpiEventGraphQL {
    pub instruction_metadata: crate::instructions::graphql::InstructionMetadataGraphQL,
    pub name: String,
    pub data: carbon_core::graphql::primitives::Json,
    pub accounts: carbon_core::graphql::primitives::Json,
